<?xml version="1.0"?>
<launch>

  <!-- Define arguments for gripper_2f and camera_arm -->
  <arg name="gripper_2f" default="false" />
  <arg name="camera_arm" default="false" />

  <!-- Send robot URDF to ROS param server -->
  <include file="$(find abb_gazebo)/launch/load_irb4600_40_255.launch">
    <arg name="gripper_2f" value="$(arg gripper_2f)"/>
    <arg name="camera_arm" value="$(arg camera_arm)"/>
  </include>

  <!-- Push robot_description to factory and spawn robot in Gazebo -->
  <node name="spawn_gazebo_model" pkg="gazebo_ros" type="spawn_model" 
        output="screen" respawn="false"
        args="-urdf
              -param robot_description
              -model irb4600_40_255
              -x 0.0
              -y 0.0
              -z 0.0
              -R 0.0
              -P 0.0
              -Y 0.0" />

  <!-- Convert joint states to TF transforms for RViz, etc -->
  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher"/>

  <!-- Initiate and start Gazebo ros_control interface -->
  <include file="$(find abb_gazebo)/launch/irb4600_255_control.launch">
    <arg name="gripper_2f" value="$(arg gripper_2f)"/>
  </include>

</launch>

