<?xml version="1.0" ?>
<robot name="camera_arm" xmlns:xacro="http://ros.org/wiki/xacro">

  <xacro:property name="PI" value="3.1415926535897931"/>

  <!-- Verificar Ã¡ngulo de camera_support -->
  <link name="camera_support_link">
    <inertial>
      <origin
        xyz="0 0 0"
        rpy="1.570796327 0 0" />
      <mass
        value="0.30915" />
      <inertia
        ixx="0.00028972"
        ixy="-5.7879E-10"
        ixz="-1.8543E-06"
        iyy="0.00030737"
        iyz="1.682E-12"
        izz="0.00019914" />
    </inertial>
    <visual>
      <origin
        xyz="0 0 0"
        rpy="1.570796327 0 0.523598" />
      <geometry>
        <mesh
          filename="package://abb_description/meshes/supports/camera_support.stl" />
      </geometry>
      <material name="green"/>
    </visual>
    <collision>
      <origin
        xyz="0 0 0"
        rpy="1.570796327 0 0.523598" /> 
      <geometry>
        <mesh
          filename="package://abb_description/meshes/supports/camera_support.stl" />
      </geometry>
    </collision>
  </link>

  <link name="camera_link">
    <visual>
      <origin
        xyz="-0.023 -0.045 -0.0125"
        rpy="1.570796327 0 1.570796327" />
      <geometry>
        <mesh
          filename="package://abb_description/meshes/camera.stl" />
      </geometry>
      <material name="metal_grey"/>
    </visual>
    <collision>
      <origin
        xyz="-0.008 -0.045 -0.0125"
        rpy="1.570796327 0 1.570796327" /> 
      <geometry>
        <mesh
          filename="package://abb_description/meshes/camera.stl" />
      </geometry>
    </collision>
    <inertial>
      <mass value="0.0001" />
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="0.0000001" ixy="0" ixz="0" iyy="0.0000001" iyz="0" izz="0.0000001" />
    </inertial>
  </link>

  <joint name="abb4600_joint_camera_support" type="fixed">
    <parent link="tool0"/>
    <child link="camera_support_link"/>
    <origin rpy="0 0 -1.57" xyz="0 0 0.008"/>
  </joint>

  <joint name="camera_joint" type="fixed">
    <origin xyz="0 -0.06 0.095" rpy="0 -1.570796327 1.570796327"/>
    <parent link="camera_support_link"/>
    <child link="camera_link"/>
  </joint>

  <!-- Removido: joint camera_optical_joint -->

  <!-- Removido: link camera_frame_optical -->

  <!-- depth camera -->
  <gazebo reference="camera_link">
    <sensor name="camera1" type="depth">
      <update_rate>20</update_rate>
      <camera>
        <horizontal_fov>1.2</horizontal_fov>
        <image>
          <width>640</width>
          <height>480</height>
          <format>R8G8B8</format>
        </image>
        <clip>
          <near>0.05</near>
          <far>30</far>
        </clip>
      </camera>
      <plugin filename="libgazebo_ros_openni_kinect_plugin.so" name="camera_controller">
        <!-- Configuraciones del plugin -->
      </plugin>
    </sensor>
  </gazebo>

</robot>

